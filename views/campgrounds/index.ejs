<%- include("../partials/header") %>
     
	<header id="myCarousel" class="carousel slide mb-3 text-center" data-ride="carousel">
         <div id="car-container" class="container">
             <ol class="carousel-indicators">
          <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
          <li data-target="#myCarousel" data-slide-to="1"></li>
          <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img class="first-slide carousel-img" src="https://res.cloudinary.com/pxiong037/image/upload/v1595567927/photo-1526491109672-74740652b963_yz7owh.jpg" alt="First slide">
            <div class="container">
              <div class="carousel-caption text-left">
                <h1><span class="glyphicon glyphicon-tent"></span> Welcome To YelpCamp!</h1>
             <p>View our hand-picked campgrounds from all over the world</p>
              </div>
            </div>
          </div>
          <div class="carousel-item">
            <img class="second-slide carousel-img" src="https://res.cloudinary.com/pxiong037/image/upload/v1595567399/photo-1529335368860-022a22e0a944_xvrfx4.jpg" alt="Second slide">
            <div class="container">
              <div class="carousel-caption">
                <h1><span class="glyphicon glyphicon-tent"></span> Welcome To YelpCamp!</h1>
             <p>View our hand-picked campgrounds from all over the world</p>
				 <% if(!currentUser){ %>
                  <div class="nav-item <%= typeof page !== 'undefined' && page === 'register' ? 'active' : '' %>"><a class="btn btn-primary btn-lg" href="/register">Sign Up</a></div>
              <% } %>
              </div>
            </div>
          </div>
          <div class="carousel-item">
            <img class="third-slide carousel-img" src="https://res.cloudinary.com/pxiong037/image/upload/v1595565497/photo-1537565266759-34bbc16be345_nh3uxv.jpg" alt="Third slide">
            <div class="container">
              <div class="carousel-caption text-right">
                <h1><span class="glyphicon glyphicon-tent"></span> Welcome To YelpCamp!</h1>
             <p>View our hand-picked campgrounds from all over the world</p>
                <% if(!currentUser){ %>
                  <div class="nav-item <%= typeof page !== 'undefined' && page === 'login' ? 'active' : '' %>"><a class="btn btn-primary btn-lg" href="/login">Login</a></div>
              <% } %>
              </div>
            </div>
          </div>
        </div>
        <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
         </div>
     </header>

			<div class="add-search my-4">
				<a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campground</a>
              <form action="/campgrounds" method="GET" class="form-inline add-search" id="campground-search">
                <div class="form-group">
                  <input type="text" name="search" placeholder="Campground search..." class="form-control bg-light">
                </div>
              </form>
             </div>

		<hr>

          <div class="row text-center" id="campground-grid">
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                <div class="card">
                  <img class="card-img-top img-fluid" src="<%= campground.image %>" alt="<%= campground.name %>">
                  <div class="card-body">
                    <h5 class="card-title"><%= campground.name %></h5>
                    <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
                  </div>
                </div>
            </div>
        <% }); %>
    </div>


<%- include("../partials/footer") %>